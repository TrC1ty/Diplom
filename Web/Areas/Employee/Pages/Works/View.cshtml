@page "/work/{WorkId}"
@model Diplom.Web.Areas.Employee.Pages.Works.ViewModel
@{
}

@section Navbar {
    <a class="navbar-link" asp-page="/Sections/View" asp-route-sectionId="@Model.SectionId"><i class="bi bi-arrow-left"></i>К разделу</a>
}

@section PageName {
    @Model.Work!.Name
}

<ul class="sidenav nav-tabs" id="myTab" role="tablist">
    <li>
        <a asp-page="/Works/View" asp-route-workId="@Model.WorkId" class="sidenav-link sidenav-link-active" role="tab">
            <img src="~/images/bootstrap/info.svg" />
            <i class="bi bi-house"></i>Паспорт работы
        </a>
    </li>
    <li>
        <a asp-page="/Works/Materials" asp-route-workId="@Model.WorkId" class="sidenav-link" role="tab">
            <img src="~/images/bootstrap/material.svg" />
            <i class="bi bi-file-earmark"></i>Материалы
        </a>
    </li>
    <li>
        <a asp-page="/Works/ExecutiveSchemes" asp-route-workId="@Model.WorkId" class="sidenav-link" role="tab">
            <img src="~/images/bootstrap/doc.svg" />
            <i class="bi bi-file-earmark"></i>Исполнительные схемы
        </a>
    </li>
    <li>
        <a asp-page="/Works/WorkDocumentation" asp-route-workId="@Model.WorkId" class="sidenav-link" role="tab">
            <img src="~/images/bootstrap/snip.svg" />
            <i class="bi bi-file-earmark"></i>СНИПы
        </a>
    </li>
</ul>

<div class="content">
    <div class="col-md-auto">
        <div class="row">
            <div class="col">
                <p style="color: rgba(0, 0, 0, 0.54);">Паспорт работы</p>
            </div>
            <div class="col-2" style="text-align: right">
                <form method="post">
                    <a class="btn btn-outline-secondary btn-sm" asp-page="" asp-route-projectId=""><img src="~/images/bootstrap/edit.svg" style="display: block; margin: 0 auto;" /></a>
                    <button type="submit" class="btn btn-outline-secondary btn-sm" asp-page-handler="DeleteWork" onclick="return confirm('Вы уверены, что хотите удалить эту работу?');"><img src="~/images/bootstrap/trash.svg" style="display: block; margin: 0 auto;" /></button>
                </form>
            </div>
        </div>
    </div>
    <div class="information">
        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Наименование</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.Name
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Наим-ние проектной док-ции</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.NameProjectDoc
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Номер проектной документации</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.NumberProjectDoc
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Детали чертежа проекта</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.ProjectDrawingDetails
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Наименование рабочей документации</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.NameWorkDoc
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Номер рабочей документации</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.NumberWorkDoc
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Детали работы проекта</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.ProjectWorkDetails
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Человек подготавливающи документацию</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.PersonInformation
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Начало выполнения работ</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.DateTimeWorkStarted
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Окончание выполнения работ</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.DateTimeWorkEnded
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Дополнительная информация</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.AdditionalInfo
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Следущая работа</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.NextWork
            </div>
        </div>

        <div class="row p-2">
            <div class="col-12 col-md-4 label">
                <span class="col-form-label p-0" style="color: rgba(0, 0, 0, 0.54);">Колличество экземпляров</span>
            </div>
            <div class="col-12 col-md-6">
                @Model.Work!.InstancesTotal
            </div>
        </div>
    </div>
</div>