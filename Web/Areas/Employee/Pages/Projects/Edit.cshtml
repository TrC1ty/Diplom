@page "/projects/{ProjectId}/edit"
@model Diplom.Web.Areas.Employee.Pages.Projects.Edit
@{
    ViewData["Title"] = "Home page";
}

@section Navbar {
    <a class="navbar-link" asp-page="/Projects/View" asp-route-projectId="@Model.ProjectId"><i class="bi bi-arrow-left"></i>К проекту</a>
}

@section PageName {
    Редактирование проекта
}

<div class="mt-4 my-3 p-3 bg-body rounded shadow-sm">
    <h1>Редактирование проекта</h1>
</div>
<div class="mt-4 my-3 p-3 bg-body rounded shadow-sm">
    <form method="post" class="p-3">
        <div class="form-group">
            <div class="row mb-4 align-items-center">
                <div class="col-12 col-md-3">
                    <label class="col-form-label p-0" asp-for="Name"></label>
                </div>
                <div class="col-12 col-md-6">
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-12 col-md-3">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row mb-4 align-items-center">
                <div class="col-12 col-md-3">
                    <label class="col-form-label p-0" asp-for="ProjectDocumentation"></label>
                </div>
                <div class="col-12 col-md-6">
                    <input asp-for="ProjectDocumentation" class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row mb-4 align-items-center">
                <div class="col-12 col-md-3">
                    <label class="col-form-label p-0" asp-for="BuildingAddress"></label>
                </div>
                <div class="col-12 col-md-6">
                    <input asp-for="BuildingAddress" class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row mb-4 align-items-center">
                <div class="col-12 col-md-3">
                    <label class="col-form-label p-0" asp-for="ProjectCode"></label>
                </div>
                <div class="col-12 col-md-6">
                    <input asp-for="ProjectCode" class="form-control" />
                </div>
                <div class="col-12 col-md-3">
                    <span asp-validation-for="ProjectCode" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary my-2">Сохранить</button>
    </form>
</div>